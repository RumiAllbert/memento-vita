---
interface Props {
  title?: string;
}

const { title = 'Memento Mori â€” Life Calendar' } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Visualize your life as a grid of weeks. Make time tangible." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script is:inline>
      // Apply saved theme instantly to prevent flash
      (function() {
        const theme = localStorage.getItem('theme') || 'dark';
        document.documentElement.className = theme;
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
